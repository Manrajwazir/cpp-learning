{
    "tasks": [
        {
            // --- DEBUG BUILD ---
            "type": "cppbuild",
            "label": "Build: DEBUG", 
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-ggdb",
                "-pedantic-errors",
                "-Wall",
                "-Weffc++",
                "-Wextra",
                "-Wconversion",
                "-Wsign-conversion",
                "-Werror",
                "-std=c++23",
                "${fileDirname}\\**.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds with debug info (gdb)."
        },
        {
            // --- RELEASE BUILD ---
            "type": "cppbuild",
            "label": "Build: RELEASE",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-O2",
                "-DNDEBUG",
                "-pedantic-errors",
                "-std=c++23",
                "${file}",
                "-o",
                "${fileDirname}\\**.cpp",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Builds optimized release version."
        }
    ],
    "version": "2.0.0"
}
